<section class="signin-section">
  <div class="signin-photo-container">
  </div>
  <div class="signin-form-container">
    <div class="signin-form-inputs">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name),class:'form-tag') do |f| %>
        <div class="signin-form">
          <div class="signin-form-left">
            <li><a href="#"><i class="fa-solid fa-cube"></i>studyclub</a></li>
            <p>Welcome To StudyClub Please Sign in To Your Account</p>
            <div class="floating-label">
              <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"floating-input" %>
              <span class="highlight"></span>
              <%= f.label :Email %>
            </div>  
        
            <div class="floating-label">
              <%= f.password_field :password, autocomplete: "current-password",class:"floating-input" %>
              <span class="highlight"></span>
              <%= f.label :Password %><br />
            </div>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="forgot">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>
          <div class="action signin-action-btn signup-btn">
              <%= f.submit "Sign in" %>
            <h5>If you don't have an account?</h5>
            <%= link_to 'Sign Up', new_user_registration_path %>
          </div>
        </div>
      <% end %>
      <%#= render "devise/shared/links" %>
    </div>
</div>
</section>