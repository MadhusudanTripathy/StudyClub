<section>
  <div class="photo-container">
  </div>
  <div class="form-container">
    <div class="form-inputs">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class="form">
          <div class="form-left">
            <li><a href="#"><i class="fa-solid fa-cube"></i>studyclub</a></li>
            <div class="floating-label">
              <%= f.text_field :full_name,class:'floating-input', placeholder:'Full Name' %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label">
              <%= f.email_field :email, class:'floating-input', placeholder:'Email' %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label">
              <%= f.password_field :password, class:'floating-input', autocomplete: "new-password",placeholder:'Password' %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label gender-selector">
              <%=f.select(:gender, [['Male', 'M'], ['Female', 'F']], class:'choose-gender')%>
            </div>
          </div>
          <div class="form-right">
            <p>Welcome To StudyClub Please Create Your Account</p>
            <div class="floating-label">
              <%= f.text_field :user_name, class:'floating-input',placeholder:'User Name' %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label">
              <%= f.text_field :phone, class:'floating-input',placeholder:'Phone' %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label">
              <%= f.password_field :password_confirmation, class:'floating-input', autocomplete: "new-password",placeholder:'Confirm Password' %>
              <span class="highlight"></span>
            </div>
            <div class="floating-label">
              <%= f.date_field :dob, class:'floating-input' %>
              <span class="highlight"></span>
            </div>
          </div>
        </div>
        <div class="btn signup-btn">
          <%= f.submit "Sign up" %>
          <h5>If already have an account?</h5>
          <%= link_to 'Sign In', new_user_session_path %>
        </div>
      <% end %>
    </div>
  </div>
</section>
<style>
  :root {
      --main-color: #E0F1FF;
      --text-color: #303841;
      --lable-color:#536dfe;
      --font-size: 16px;
  }

  * {
      margin: 0;
      padding: 0;
      list-style: none;
      text-decoration: none;
      box-sizing: border-box;
      font-family: Arial, Helvetica, sans-serif;
      -webkit-transition:-webkit-transform 2s;
      transition: transform 2s;
  }

  section{
      display: flex;
      min-height: 100vh;
  }
  .form-container .form-logo{
      display: flex;
      justify-content: space-between;
      width: 100%;
  }
  .form-left li a{
      color: var(--text-color);
      font-size: 2.1rem;
      text-transform: uppercase;
      font-weight: 600;
  }
  .photo-container{
      flex: 1;
      background: url(/assets/signup-img.jpg) no-repeat center/cover;
  }

  .form-container{
      flex: 1;
  }

  .form-right p{
    padding: 4px 0;
      max-width:100%;
      text-align: left;
      font-size: 14px;
  }
  .form-inputs{
      padding:10% 5%;
  }
  .form{
      display: grid;
      grid-gap: 50px;
      grid-template-columns: repeat(2, minmax(100px, 2fr));
  }
  .floating-label {
      position:relative;
      margin-bottom:20px;
      margin-top: 40px;
    }
    .floating-label .icon{
        display: flex;
    }
    .gender{
        color: var(--lable-color);
        margin-top:-20px;
    }
    .floating-label input[type='radio']:after{
      width: 15px;
      height: 15px;
      border-radius: 15px;
      top: -2px;
      left: -1px;
      position: relative;
      background-color:#fff;
      content: '';
      display: inline-block;
      visibility: visible;
      border: 2px solid var(--text-color);
    }
    .floating-label input[type='radio']:checked:after {
      background-color: var(--lable-color);
      content: '';
      display: inline-block;
      visibility: visible;
      border: 2px solid var(--text-color);
  }
  .floating-label input[type='radio']:hover{
      cursor: pointer;
  }
    .floating-label .choose-gender{
        margin-top: 16px;
    }
    .btn input[type=submit]{
      width: 100%;
      background-color: var(--text-color);
      padding: 12px;
      outline: none;
      border: none;
      border-radius: 4px;
      color: var(--main-color);
      font-size: 16px;

    }
    .btn input[type=submit]:hover{
      transition: box-shadow 0.3s;
        cursor: pointer;
        box-shadow: 1px 1px 12px rgba(0, 0, 0, 0.6);
    }
    .btn h5{
        padding-top: 1.5rem;
        color: var(--text-color);
    }
    .btn a{
        font-size: 14px;
        color: var(--text-color);
    }
    .floating-input , .floating-select {
      font-size:14px;
      padding:4px 4px;
      display:block;
      width:100%;
      height:30px;
      background-color: transparent;
      border:none;
      border-bottom:1px solid var(--text-color);
    }

    .floating-input:focus , .floating-select:focus {
         outline:none;
         border:2px solid var(--lable-color);
    }

    label {
      color:#999;
      font-size:14px;
      font-weight:normal;
      position:absolute;
      pointer-events:none;
      left:5px;
      top:5px;
      transition:0.2s ease all;
      -moz-transition:0.2s ease all;
      -webkit-transition:0.2s ease all;
    }
    .gender-selector{
      margin-top:22px;
    }
    #user_gender{
      /* background-color:red; */
      /* vertical-align:middle; */
      padding:6px 6px;
    }

    .floating-input:focus ~ label, .floating-input:not(:placeholder-shown) ~ label {
      top:-18px;
      font-size:14px;
      color:var(--lable-color);
    }

    .floating-select:focus ~ label , .floating-select:not([value=""]):valid ~ label {
      top:-18px;
      font-size:14px;
      color:var(--lable-color);
    }

    /* active state */
    .floating-input:focus ~ .bar:before, .floating-input:focus ~ .bar:after, .floating-select:focus ~ .bar:before, .floating-select:focus ~ .bar:after {
      width:50%;
    }

    *, *:before, *:after {
        -webkit-box-sizing: border-box;
        -moz-box-sizing: border-box;
        box-sizing: border-box;
    }

    /* highlighter */
    .highlight {
      position:absolute;
      height:50%;
      width:100%;
      top:15%;
      left:0;
      pointer-events:none;
      opacity:0.5;
    }

    /* active state */
    .floating-input:focus ~ .highlight , .floating-select:focus ~ .highlight {
      -webkit-animation:inputHighlighter 0.3s ease;
      -moz-animation:inputHighlighter 0.3s ease;
      animation:inputHighlighter 0.3s ease;
    }

    /* animation */
    @-webkit-keyframes inputHighlighter {
        from { background:var(--lable-color); }
      to 	{ width:0; background:transparent; }
    }
    @-moz-keyframes inputHighlighter {
        from { background:var(--lable-color); }
      to 	{ width:0; background:transparent; }
    }
    @keyframes inputHighlighter {
        from { background:var(--lable-color); }
      to 	{ width:0; background:transparent; }
    }
    @media only screen and (max-width: 1200px){
      .photo-container{
        display: none;
      }
      .form-left li a{
        font-size:27.9px;
      }
      .form-right p{
        padding: 8px;
      }
    }
    @media only screen and (max-width:790px){
      .form-right p{
        padding: 0px;
      }
      .form-left li a{
        font-size:25.9px;
      }
      .form{
        grid-template-columns: repeat(2, minmax(100px, 1fr));
      }
    }
</style>
